{
  "include": ["src"],
  "compilerOptions": {
    "lib": [
      "ES2021.String",
      "dom"
    ],
    "alwaysStrict": true,
    "target": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "strict": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "./src/pod/types", "node_modules/@types"
    ],
    "rootDirs": ["src"],
    "outDir": "dist"
  },
  "ts-node": {
    "esm": true
}
}
